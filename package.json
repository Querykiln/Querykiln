{
  "name": "querykiln",
  "version": "0.0.6",
  "description": "Querykiln Desktop Application",
  "main": "dist/electron/main/index.js",
  "author": "Querykiln",
  "license": "MIT",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "postinstall": "electron-builder install-app-deps",

    "desktop-dev": "cross-env NODE_ENV=development electron .",
    "desktop-build-mac": "electron-builder --mac dmg zip",
    "desktop-build-win-all": "electron-builder --win nsis --x64 --arm64",
    "desktop-build-linux-all": "electron-builder --linux AppImage deb rpm snap",
    "desktop-publish": "electron-builder --publish always"
  },

  "dependencies": {
    "electron-updater": "^6.3.8"
  },

  "devDependencies": {
    "electron": "39.2.0",
    "electron-builder": "^25.1.8",
    "@electron/rebuild": "^3.4.1",
    "vite": "^5.0.0",
    "cross-env": "^7.0.3"
  },

  "build": {
    "appId": "com.querykiln.app",
    "productName": "Querykiln",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },

    "publish": {
      "provider": "github",
      "owner": "Querykiln",
      "repo": "Querykiln",
      "releaseType": "draft"
    },

    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity",
      "icon": "build/Icons/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },

    "dmg": {
      "sign": false
    },

    "win": {
      "icon": "build/Icons/querykiln_icon.ico",
      "compression": "store",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ]
    },

    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "differentialPackage": false
    },

    "linux": {
      "icon": "build/Icons",
      "target": ["AppImage", "deb", "rpm"],
      "category": "Utility"
    }
  }
}
