{
  "name": "querykiln",
  "productName": "Querykiln",
  "description": "Querykiln â€” AI-powered SEO desktop toolkit",
  "author": {
    "name": "Gethin Jones",
    "email": "gerkinonfire@googlemail.com"
  },
  "version": "0.0.1",
  "type": "module",
  "main": "electron/main.cjs",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron electron/main.cjs",

    "desktop-dev": "concurrently \"npm run dev\" \"npm run electron\"",

    "desktop-build": "vite build && electron-builder",

    "desktop-build-win-x64": "electron-builder --win nsis --x64",
    "desktop-build-win-arm64": "electron-builder --win nsis --arm64",
    "desktop-build-win-all": "electron-builder --win nsis --x64 --arm64",

    "desktop-build-linux-x64": "electron-builder --linux AppImage deb --x64",
    "desktop-build-linux-arm64": "electron-builder --linux AppImage deb --arm64",
    "desktop-build-linux-all": "electron-builder --linux AppImage deb --x64 --arm64"
  },

  "build": {
    "appId": "com.querykiln.app",
    "productName": "Querykiln",

    "directories": {
      "output": "release"
    },

    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],

    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/Icons/icon.icns",
      "target": ["dmg", "zip"]
    },

    "win": {
      "icon": "build/Icons/querykiln_icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ]
    },

    "linux": {
      "category": "Utility",
      "icon": "build/Icons",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ]
    }
  },

  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "jspdf": "^3.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.4.1"
  },

  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "electron": "^39.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2"
  }
}
